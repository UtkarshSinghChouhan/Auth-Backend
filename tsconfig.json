{
  "compilerOptions": {
    "target": "ES2020", // Set the JavaScript target version
    "module": "ESNext", // Use ESNext for ES Module syntax
    "moduleResolution": "node", // Use Node.js module resolution
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names are case-consistent
    "outDir": "dist", // Output directory for compiled files
    "baseUrl": "./",                       // Base directory for resolving non-relative modules
    "paths": {
      "@src/*": ["src/*"],                 // Alias '@src' to the 'src' folder
      "@models/*": ["src/models/*"],       // Alias '@models' to the 'src/models' folder
      "@config/*": ["src/config/*"],       // Alias '@config' to the 'src/config' folder
      "@services/*": ["src/services/*"],   // Alias '@services' to the 'src/services' folder
      "@middlewares/*": ["src/middlewares/*"], // Alias '@middlewares' to the 'src/middlewares' folder
      "@routes/*": ["src/routes/*"]        // Alias '@routes' to the 'src/routes' folder
    },
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
