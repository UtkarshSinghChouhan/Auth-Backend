{
  "compilerOptions": {
    "target": "ES2020", // Set the JavaScript target version
    "module": "ESNext", // Use ESNext for ES Module syntax
    "moduleResolution": "node", // Use Node.js module resolution
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names are case-consistent
    "outDir": "dist", // Output directory for compiled files
    "baseUrl": ".", // Base directory for resolving non-relative module names
    "paths": {
      // Paths mapping for module resolution
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
